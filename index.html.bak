                    <span style="color: #ffa500;">‚è≥ –û–∂–∏–¥–∞–Ω–∏–µ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –∑–∞—è–≤–∫–∏</span>
                `;
            } else {
                const friendAvatar = chat.userId ? (userData[chat.userId]?.profile?.avatar || 'üòÄ') : 'üòÄ';
                document.getElementById('currentChatAvatar').textContent = friendAvatar;
                
                const isOnline = isUserOnline(chat.userId);
                document.getElementById('currentChatParticipants').innerHTML = `
                    ${isOnline ? 
                        '<span style="color: #4caf50;">‚óè online</span>' : 
                        '<span style="color: #9e9e9e;">‚óè offline</span>'} üîê
                `;
            }
            
            if (chat.type === 'pending') {
                document.getElementById('messagesContainer').innerHTML = `
                    <div style="text-align: center; max-width: 400px; margin: auto;">
                        <div style="font-size: 64px; margin-bottom: 20px;">üëã</div>
                        <h3 style="font-size: 22px; color: #333; margin-bottom: 15px;">
                            –ó–∞—è–≤–∫–∞ –≤ –¥—Ä—É–∑—å—è –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞
                        </h3>
                        <p style="color: #666; margin-bottom: 30px; font-size: 16px;">
                            –û–∂–∏–¥–∞–µ–º, –ø–æ–∫–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å <strong>${chat.name}</strong> –ø–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç –∑–∞—è–≤–∫—É
                        </p>
                        <button onclick="cancelFriendRequest('${chat.name}')" style="
                            padding: 12px 25px;
                            background: #ff6b6b;
                            color: white;
                            border: none;
                            border-radius: 10px;
                            font-size: 15px;
                            font-weight: 600;
                            cursor: pointer;
                        ">
                            ‚ùå –û—Ç–º–µ–Ω–∏—Ç—å –∑–∞—è–≤–∫—É
                        </button>
                    </div>
                `;
                
                document.getElementById('messageInput').disabled = true;
                document.getElementById('sendButton').disabled = true;
            } else {
                document.getElementById('messageInput').disabled = false;
                document.getElementById('sendButton').disabled = false;
                document.getElementById('messageInput').focus();
                
                markMessagesAsRead(chat.id);
                await loadMessages();
                displayChats();
            }
        }
        
        // ===== –§–£–ù–ö–¶–ò–ò –°–û–û–ë–©–ï–ù–ò–ô =====
        function markMessagesAsRead(chatId) {
            if (!currentUser || !chatId) return;
            
            const messages = userData[currentUser.id].messages[chatId] || [];
            if (!userData[currentUser.id].readMessages[chatId]) {
                userData[currentUser.id].readMessages[chatId] = {};
            }
            
            messages.forEach(msg => {
                if (msg.senderId !== currentUser.id) {
                    userData[currentUser.id].readMessages[chatId][msg.id] = true;
                    msg.status = 'read';
                }
            });
            
            if (currentChat?.type === 'group') {
                const participants = currentChat.participants || [];
                participants.forEach(participant => {
                    if (participant.id !== currentUser.id && userData[participant.id]?.messages[chatId]) {
                        const participantMessages = userData[participant.id].messages[chatId];
                        participantMessages.forEach(msg => {
                            if (msg.senderId === currentUser.id) {
                                msg.status = 'read';
                            }
                        });
                    }
                });
            } else {
                const friendId = currentChat?.userId;
                if (friendId && userData[friendId]?.messages[chatId]) {
                    const friendMessages = userData[friendId].messages[chatId];
                    friendMessages.forEach(msg => {
                        if (msg.senderId === currentUser.id) {
                            msg.status = 'read';
                        }
                    });
                }
            }
            
            saveToStorage();
        }
        
        async function loadMessages() {
            if (!currentChat || !currentUser) return;
            
            const messagesContainer = document.getElementById('messagesContainer');
            const chatId = currentChat.id;
            
            if (!userData[currentUser.id].messages) {
                userData[currentUser.id].messages = {};
            }
            if (!userData[currentUser.id].messages[chatId]) {
                userData[currentUser.id].messages[chatId] = [];
            }
            if (!userData[currentUser.id].readMessages[chatId]) {
                userData[currentUser.id].readMessages[chatId] = {};
            }
            
            const messages = userData[currentUser.id].messages[chatId];
            
            if (messages.length === 0) {
                messagesContainer.innerHTML = `
                    <div class="empty-chat">
                        <div class="icon">üí¨</div>
                        <h3>${currentChat.name} ${currentChat.type === 'private' ? 'üîê' : ''}</h3>
                        <p>–ù–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π. –ù–∞–ø–∏—à–∏—Ç–µ –ø–µ—Ä–≤—ã–º!</p>
                    </div>
                `;
                return;
            }
            
            messagesContainer.innerHTML = '';
            
            for (const msg of messages) {
let displayText = msg.text;
let isEncrypted = false;

// –°–í–û–ò –°–û–û–ë–©–ï–ù–ò–Ø - –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª
if (msg.senderId === currentUser.id) {
    displayText = msg.text;  // ‚Üê –°–í–û–Å –°–û–û–ë–©–ï–ù–ò–ï –í–ò–î–ò–ú –°–†–ê–ó–£
    isEncrypted = true;      // ‚Üê –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∏–∫–æ–Ω–∫—É üîê
} 
// –ß–£–ñ–ò–ï –°–û–û–ë–©–ï–ù–ò–Ø - —Ä–∞—Å—à–∏—Ñ—Ä–æ–≤—ã–≤–∞–µ–º
else if (currentChat.type === 'private' && 
         !msg.text.startsWith('‚úÖ') && 
         !msg.text.startsWith('üë•') && 
         !msg.text.startsWith('‚è≥') && 
         currentUserPrivateKey) {
    try {
        // –ò—Å–ø–æ–ª—å–∑—É–µ–º encryptedText –µ—Å–ª–∏ –µ—Å—Ç—å, –∏–Ω–∞—á–µ msg.text
        const textToDecrypt = msg.encryptedText || msg.text;
        displayText = await decryptMessage(textToDecrypt, currentUserPrivateKey);
        isEncrypted = true;
    } catch (e) {
        displayText = '[üîí –ó–∞—à–∏—Ñ—Ä–æ–≤–∞–Ω–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ]';
    }
}
                
                const messageEl = document.createElement('div');
                messageEl.className = `message ${msg.senderId === currentUser.id ? 'outgoing' : 'incoming'}`;
                
                let statusIcon = '';
                if (msg.senderId === currentUser.id) {
                    if (msg.status === 'read') {
                        statusIcon = '<span class="status-icon read" style="color: #4fc3f7;">‚úì‚úì</span>';
                    } else {
                        statusIcon = '<span class="status-icon delivered">‚úì</span>';
                    }
                }
                
                let senderName = '';
                if (currentChat.type === 'group' && msg.senderId !== currentUser.id) {
                    const sender = usersDatabase.find(u => u.id === msg.senderId);
                    if (sender) {
                        senderName = `<div class="message-sender">@${sender.username}</div>`;
                    }
                }
                
                messageEl.innerHTML = `
                    ${senderName}
                    <div class="message-text">${displayText}</div>
                    <div class="message-footer">
                        <span class="message-time">${msg.time}</span>
                        ${isEncrypted ? '<span style="margin-right: 4px;">üîê</span>' : ''}
                        ${msg.senderId === currentUser.id ? '<span style="margin-right: 4px;">üîê</span>' : ''}
                        ${statusIcon}
                    </div>
                `;
                
                messagesContainer.appendChild(messageEl);
            }
            
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
        
        async function sendMessage() {
            if (!currentChat || !currentUser) return;
            if (currentChat.type === 'pending') {
                alert('–°–Ω–∞—á–∞–ª–∞ –¥–æ–∂–¥–∏—Ç–µ—Å—å –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –∑–∞—è–≤–∫–∏');
                return;
            }
            
            const messageInput = document.getElementById('messageInput');
            const text = messageInput.value.trim();
            
            if (!text) return;
            
            const chatId = currentChat.id;
            const time = new Date().toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' });
            
            let encryptedText = text;
            
            if (currentChat.type === 'private' && currentChat.userId) {
                const receiver = usersDatabase.find(u => u.id === currentChat.userId);
                if (receiver && receiver.publicKey) {
                    try {
                        const publicKey = await importPublicKey(receiver.publicKey);
                        encryptedText = await encryptMessage(text, publicKey);
                    } catch (e) {
                        console.error('‚ùå –û—à–∏–±–∫–∞ —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏—è:', e);
                    }
                }
            }
            
const message = {
    id: Date.now(),
    senderId: currentUser.id,
    senderName: currentUser.username,
    text: text,                    // ‚Üê –°–û–•–†–ê–ù–Ø–ï–ú –û–†–ò–ì–ò–ù–ê–õ–¨–ù–´–ô –¢–ï–ö–°–¢ –î–õ–Ø –°–ï–ë–Ø
    encryptedText: encryptedText,  // ‚Üê –ê –®–ò–§–†–û–í–ê–ù–ù–´–ô –î–õ–Ø –î–†–£–ì–ê
    time: time,
    status: 'delivered'
};
            
            if (!userData[currentUser.id].messages[chatId]) {
                userData[currentUser.id].messages[chatId] = [];
            }
            userData[currentUser.id].messages[chatId].push(message);
            
            const userChat = userData[currentUser.id].chats.find(c => c.id === chatId);
            if (userChat) {
                userChat.lastMessage = text.length > 30 ? text.substring(0, 30) + '...' : text;
                userChat.lastMessageTime = time;
            }
            
            if (currentChat.type === 'private' && currentChat.userId) {
                const friendId = currentChat.userId;
                if (userData[friendId]) {
                    if (userData[friendId].deletedChats) {
                        userData[friendId].deletedChats = userData[friendId].deletedChats.filter(id => id !== chatId);
                    }
                    
                    let friendChat = userData[friendId].chats.find(c => c.id === chatId);
                    if (!friendChat) {
                        friendChat = {
                            id: chatId,
                            name: currentUser.username,
                            userId: currentUser.id,
                            type: 'private',
                            lastMessage: text.length > 30 ? text.substring(0, 30) + '...' : text,
                            lastMessageTime: time,
                            unread: 1,
                            isDeleted: false
                        };
                        userData[friendId].chats.push(friendChat);
                    }
                    
                    if (!userData[friendId].messages[chatId]) {
                        userData[friendId].messages[chatId] = [];
                    }
                    userData[friendId].messages[chatId].push({
                        ...message,
                        text: encryptedText,
                        status: 'delivered'
                    });
                    
                    if (friendChat) {
                        friendChat.lastMessage = text.length > 30 ? text.substring(0, 30) + '...' : text;
                        friendChat.lastMessageTime = time;
                    }
                }
            }
            
            if (currentChat.type === 'group') {
                const participants = currentChat.participants || [];
                participants.forEach(participant => {
                    if (participant.id !== currentUser.id && userData[participant.id]) {
                        if (!userData[participant.id].messages[chatId]) {
                            userData[participant.id].messages[chatId] = [];
                        }
                        
                        userData[participant.id].messages[chatId].push({
                            ...message,
                            text: text,
                            status: 'delivered'
                        });
                        
                        const participantChat = userData[participant.id].chats.find(c => c.id === chatId);
                        if (participantChat) {
                            participantChat.lastMessage = text.length > 30 ? text.substring(0, 30) + '...' : text;
                            participantChat.lastMessageTime = time;
                        }
                    }
                });
            }
            
            messageInput.value = '';
            saveToStorage();
            await loadMessages();
            displayChats();
        }
        
        function handleMessageKeyPress(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                sendMessage();
            }
        }
        
        // ===== –í–°–ü–û–ú–û–ì–ê–¢–ï–õ–¨–ù–´–ï –§–£–ù–ö–¶–ò–ò =====
