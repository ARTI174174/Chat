                alert(`üë• –ì—Ä—É–ø–ø–æ–≤–æ–π —á–∞—Ç\n\n–ù–∞–∑–≤–∞–Ω–∏–µ: ${currentChat.name}\n–£—á–∞—Å—Ç–Ω–∏–∫–∏: ${names}\n–°–æ–∑–¥–∞—Ç–µ–ª—å: ${usersDatabase.find(u => u.id === currentChat.createdBy)?.username || '–Ω–µ–∏–∑–≤–µ—Å—Ç–Ω–æ'}`);
            } else if (currentChat.type === 'private') {
                const isOnline = isUserOnline(currentChat.userId);
                const status = isOnline ? '‚óè –æ–Ω–ª–∞–π–Ω' : '‚óè –æ—Ñ–ª–∞–π–Ω';
                alert(`üí¨ –õ–∏—á–Ω—ã–π —á–∞—Ç\n\n–°–æ–±–µ—Å–µ–¥–Ω–∏–∫: ${currentChat.name}\n–°—Ç–∞—Ç—É—Å: ${status}\nüîê –°–∫–≤–æ–∑–Ω–æ–µ —à–∏—Ñ—Ä–æ–≤–∞–Ω–∏–µ (E2EE)\n\n–î–∞–∂–µ —Å–µ—Ä–≤–µ—Ä –Ω–µ –º–æ–∂–µ—Ç –ø—Ä–æ—á–∏—Ç–∞—Ç—å –≤–∞—à–∏ —Å–æ–æ–±—â–µ–Ω–∏—è!`);
            } else {
                alert(`‚è≥ –û–∂–∏–¥–∞–Ω–∏–µ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è –∑–∞—è–≤–∫–∏ –æ—Ç ${currentChat.name}`);
            }
        }
        
        function showChatSettings() {
            alert('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —á–∞—Ç–∞ (–≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ)');
        }
        
